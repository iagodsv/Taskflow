{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Build Docker Images",
      "command": "cd taskflow-backend && docker compose build"
    }
  ],
  "tasks": {
    "start-all": {
      "name": "Start All Services (Docker)",
      "command": "cd taskflow-backend && docker compose up",
      "runAtStart": true
    },
    "frontend": {
      "name": "Frontend Preview",
      "command": "echo 'Frontend rodando via Docker'",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "backend": {
      "name": "Backend Preview",
      "command": "echo 'Backend rodando via Docker'",
      "preview": {
        "port": 8080,
        "prPath": "/taskflow"
      }
    },
    "swagger": {
      "name": "Swagger API Docs",
      "command": "echo 'Swagger UI'",
      "runAtStart": true,
      "preview": {
        "port": 8080,
        "prPath": "/taskflow/swagger-ui/index.html"
      }
    },
    "database": {
      "name": "Database Only (PostgreSQL)",
      "command": "cd taskflow-backend && docker compose up postgres"
    },
    "stop-all": {
      "name": "Stop All Services",
      "command": "cd taskflow-backend && docker compose down"
    },
    "test-backend": {
      "name": "Run Backend Tests",
      "command": "cd taskflow-backend && ./mvnw test"
    },
    "test-frontend": {
      "name": "Run Frontend Tests",
      "command": "cd taskflow-frontend && npm test"
    }
  }
}
